{% extends 'base.html.twig' %}
{# add this at the beginning of your template #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

<h1>sdhfskjhds</h1>

<section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Signup</h2>
          <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          {{ form_start(form) }}
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  {{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur...'}})}}
                </div>
                <div class="form-group">
                  {{form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}})}}
                </div>
                <div class="form-group">
                  {{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}})}}
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  {{form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Confirmation du mot de passe'}})}}
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
              </div>
            </div>
          
        </div>
      </div>
    </div>
  </section>

{% endblock %}
