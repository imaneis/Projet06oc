{% extends 'base.html.twig' %}
{# add this at the beginning of your template #}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}


<section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase" style="margin-bottom: 70px;">Signup</h2>
        </div>
      </div>
          {{ form_start(form) }}
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Nom d\'utilisateur...'}})}}
                </div>
                 </div>
                </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder': 'Adresse email'}})}}
                </div>
                 </div>
                </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(form.image, {'label': "image", 'attr': {'placeholder': "image"}})}}
                </div>
                 </div>
                </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}})}}
                </div>
               </div>
                </div>
              <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr': {'placeholder': 'Confirmation du mot de passe'}})}}
                </div>
               </div>
                </div>
              <div class="clearfix"></div>
             <div class="row">
              <div class="col-lg-6 offset-lg-3 text-center">
                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Inscription</button>
              </div>
            </div>
          {{ form_end(form) }}
    </div>
  </section>

{% endblock %}
