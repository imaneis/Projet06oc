{% extends 'base.html.twig' %}

{# add this at the beginning of your template #}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block title %}Éditer un trick{% endblock %}

{% block body %}

 <section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase" style="margin-bottom: 70px;">Éditer un trick</h2>
        </div>
      </div>
      
          {{ form_start(formArticle)}}
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                 {{form_row(formArticle.title, {'label': "Le nom du trick", 'attr': {'placeholder': "Le nom du trick"}})}}
                 {{ form_errors(formArticle) }}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                 {{form_row(formArticle.category)}}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                	{{form_row(formArticle.content, {'label': "Contenu du trick", 'attr': {'placeholder': "Contenu du trick"}})}}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <div class="form-group">
                  {{form_row(formArticle.image1, {'label': "image1", 'attr': {'placeholder': "image1"}})}}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                 <div class="form-group">
                  {{form_row(formArticle.image2, {'label': "image2", 'attr': {'placeholder': "image2"}})}}
                    </div>
                    </div>
            </div>
                  <div class="row">
              <div class="col-lg-6 offset-lg-3">
                   <div class="form-group">
                  {{form_row(formArticle.image3, {'label': "image3", 'attr': {'placeholder': "image3"}})}}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                 <div class="form-group">
                  {{form_row(formArticle.image4, {'label': "image4", 'attr': {'placeholder': "image4"}})}}
                </div>
                  </div>
            </div>
                <div class="row">
              <div class="col-lg-6 offset-lg-3">
                 <div class="form-group">
                  {{form_row(formArticle.video, {'label': "vidéo", 'attr': {'placeholder': "vidéo"}})}}
                </div>
                </div>
              </div>
              <div class="row">
              <div class="col-lg-6 offset-lg-3 text-center">
                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Éditer</button>
              </div>
            </div>
          {{ form_end(formArticle)}}
        </div>
      </div>
    </div>
  </section>



{% endblock %}