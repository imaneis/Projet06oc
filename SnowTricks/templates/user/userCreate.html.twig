{% extends 'base.html.twig' %}

{# add this at the beginning of your template #}
{% form_theme formArticle 'bootstrap_4_layout.html.twig' %}

{% block body %}



<section class="page-section" id="contact">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading text-uppercase">Creation d'article</h2>
          <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          {{ form_start(formArticle)}}
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                 {{form_row(formArticle.title, {'label': "Titre de l'article", 'attr': {'placeholder': "Titre de l'article"}})}}
                </div>
                 <div class="form-group">
                 {{form_row(formArticle.category)}}
                </div>
                <div class="form-group">
                	{{form_row(formArticle.content, {'label': "Contenu de l'article", 'attr': {'placeholder': "Contenu de l'article"}})}}
                </div>
                <div class="form-group">
                  {{form_row(formArticle.author, {'label': "Auteur", 'attr': {'placeholder': "Auteur"}})}}
                </div>
                <div class="form-group">
                  {{form_row(formArticle.image1, {'label': "image1", 'attr': {'placeholder': "image1"}})}}
                </div>
                 <div class="form-group">
                  {{form_row(formArticle.image2, {'label': "image2", 'attr': {'placeholder': "image2"}})}}
                   <div class="form-group">
                  {{form_row(formArticle.image3, {'label': "image3", 'attr': {'placeholder': "image3"}})}}
                </div>
                 <div class="form-group">
                  {{form_row(formArticle.image4, {'label': "image4", 'attr': {'placeholder': "image4"}})}}
                </div>
                 <div class="form-group">
                  {{form_row(formArticle.video, {'label': "video", 'attr': {'placeholder': "video"}})}}
                </div>
                </div>
              </div>
              <div class="col-lg-12 text-center">
                <div id="success"></div>
                <button id="sendMessageButton" class="btn btn-primary btn-xl text-uppercase" type="submit">Submit</button>
              </div>
            </div>
          {{ form_end(formArticle)}}
        </div>
      </div>
    </div>
  </section>


{% endblock %}