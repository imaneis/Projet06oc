{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="margin-top: 50px;">

<h1 style="margin-bottom: 50px;margin-top: 100px; text-align: center;">Gestion des tricks</h1>

{% if articles is not empty %}

<div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>Titre de l'article</th>
                            <th>Auteur</th>
                            <th>Date de création</th>
                            <th>Éditer</th>
                            <th>Supprimer</th>
                        </tr>
                        </thead>
                        <tbody>

{% for article in articles %}
<tr>

<td style="text-align: center;">{{article.title}}</td>
<td style="text-align: center;">{{article.author}}</td>
<td style="text-align: center;">{{article.createdAt | date('d/m/Y')}} a {{article.createdAt | date('H:i:s')}}</td>
<td style="text-align: center;"><a class="btn btn-primary btn-xl text-uppercase" href="{{path('user_edit', {'id': article.id})}}">edit</a></td>
<td style="text-align: center;"><a class="btn btn-danger btn-xl text-uppercase" href="{{path('user_delete', {'id': article.id})}}">delete</a></td>

 </tr>
 {% endfor %}
        </tbody>
                    </table>
                </div>
            </article>
        </div>
    </div>

</div>

{% else %}
                    <p style="text-align: center;">Vous n'avez cree aucun article pour l'instant.</p>
                {% endif %}

{% endblock %}